@model WebMicroondas.Models.AquecimentoPreDB

@{
    ViewBag.Title = "Cadastro";
}

<h2>Cadastro de Aquecimentos</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div>
        <h4>Erros:</h4>
        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
    </div>
}


